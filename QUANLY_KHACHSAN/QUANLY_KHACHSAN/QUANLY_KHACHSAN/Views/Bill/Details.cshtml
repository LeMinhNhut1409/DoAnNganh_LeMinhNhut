        </dd>
        <dt class="col-sm-2">
            Ngày Đến
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Ngaydat)
        </dd>
        <dt class="col-sm-2">
            Ngày Đi
        </dt>
        <dd class="col-sm-10">
