@model QUANLY_KHACHSAN.Models.Monan

@{
    ViewData["Title"] = "Xoá món ăn";
    // Kiểm tra vai trò từ claims
    var role = User.FindFirst("Role")?.Value;

    // Đặt layout dựa trên vai trò
    if (role == "Staff")
    {
        Layout = "_StaffNhaBepLayout"; // Đặt layout cho nhân viên
    }
    else if (role == "Manager")
    {
        Layout = "_ManagerLayout"; // Đặt layout cho quản lý
    }
    else
    {
        Layout = "_DefaultLayout"; // Layout mặc định nếu không xác định được vai trò
    }
}
<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Phieuthue</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Mamonan)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Tenmon)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Mota)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Gia)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Thoigianchebien)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ManvNavigation)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Mamonan" />
        <button type="submit" class="btn btn-danger">Xóa</button>  |
        <a asp-action="Index">Quay lại danh sách</a>

    </form>
</div>
