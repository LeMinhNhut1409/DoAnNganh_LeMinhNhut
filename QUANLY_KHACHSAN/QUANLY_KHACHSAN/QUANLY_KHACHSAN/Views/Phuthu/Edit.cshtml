@model QUANLY_KHACHSAN.Models.Phuthu

@{
    ViewData["Title"] = "Thay đổi tỉ lệ phụ thu";
    Layout = "_ManagerLayout";
}
@if (ViewBag.success != null)
{
    <div class="alert alert-success" role="alert">
        @ViewBag.success
    </div>
}
<h2 class="text-center display-4" style="color:red;">TỶ LỆ PHỤ THỤ</h2>

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <form asp-action="Edit" asp-route-id="@Model.Idphuthu" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Idphuthu" value="@Model.Idphuthu" />
                <div class="form-group">
                    <label asp-for="Giatriphuthu" class="control-label">Tỷ Lệ Phụ Thu</label>
                    <input asp-for="Giatriphuthu" class="form-control" />
                    <span asp-validation-for="Giatriphuthu" class="text-danger"></span>
                </div>
                <div class="form-group d-flex justify-content-end mt-2">
                    <button type="submit" class="btn btn-primary">Lưu</button>
                </div>
            </form>
        </div>
    </div>
</div>
