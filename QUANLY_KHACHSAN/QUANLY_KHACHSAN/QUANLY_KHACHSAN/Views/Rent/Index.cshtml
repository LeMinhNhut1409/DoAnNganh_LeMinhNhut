
@model IEnumerable<QUANLY_KHACHSAN.Models.Phieuthue>

@{
    ViewData["Title"] = "Danh sách phiếu thuê";
    // Kiểm tra vai trò từ claims
    var role = User.FindFirst("Role")?.Value;

    // Đặt layout dựa trên vai trò
    if (role == "Staff")
    {
        Layout = "_StaffLeTanLayout"; // Đặt layout cho nhân viên
    }
    else if (role == "Manager")
    {
        Layout = "_ManagerLayout"; // Đặt layout cho quản lý
    }
    else
    {
        Layout = "_DefaultLayout"; // Layout mặc định nếu không xác định được vai trò
    }
}
<!-- Add the DataTables CSS -->

<link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.11.5/css/jquery.dataTables.css">
    <style>
        .table-bordered {
            border: 2px solid black; /* Viền bảng màu đen */
        }

            .table-bordered th, .table-bordered tr {
                border: 1px solid black; /* Viền ô màu đen */
            }
    </style>

<div class="text-center">
    <h1 class="display-4" style="color: red;">DANH SÁCH PHIẾU THUÊ</h1>
</div>
        <p>
            <a asp-action="Create" asp-controller="Rent" asp-route-manager="@(TempData["Manager"].ToString())" class="btn btn-primary">Tạo phiếu</a>
        </p>

        <table id="dataTable" class="table table-striped table-bordered text-center">
            <thead class="thead-dark">
                <tr>
                    <th>
                        Nhân viên LPT
                    </th>
                    <th>
                        Ngày LPT
                    </th>
                    <th>
                        Tên khách hàng
                    </th>
                    <th> Căn cước công dân KH</th>
                    <th>
                        Tên phòng
                    </th>
                    <th>
                        Tác vụ
                    </th>
                </tr>
            </thead>
            <tbody>

                @foreach (var item in Model)
                {
                    <tr>
                        <td class="text-center">
                            @Html.DisplayFor(modelItem => item.ManvNavigation.Hoten)
                        </td>
                        <td class="text-center">
                            @item.Ngaylappt.ToString("dd/MM/yyyy")
                        </td>

                        <td class="text-center">
                            @Html.DisplayFor(modelItem => item.MakhNavigation.Tenkh)
                        </td>
                        <td class="text-center">
                            @Html.DisplayFor(modelItem => item.MakhNavigation.Cccdkh)
                        </td>
                        <td class="text-center">
                            @Html.DisplayFor(modelItem => item.MapNavigation.Tenphong)
                        </td>
                        <td class="text-center">
                            <a asp-action="Edit" asp-route-id="@item.Mapt" asp-route-roomid="@item.Map" class="btn btn-primary">Chỉnh sửa</a>
                            <a asp-action="Details" asp-route-id="@item.Mapt" class="btn btn-info">Chi tiết</a>
                            <form asp-action="Delete" asp-route-id="@item.Mapt" method="post" style="display: inline;">
                                <button type="submit" class="btn btn-danger">Xóa</button>
                            </form>
                        </td>
                    </tr>
                }
    
        </tbody>
    </table>
   
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js" defer></script>
        <script src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.js" defer></script>

        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
        <script src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.js"></script>
