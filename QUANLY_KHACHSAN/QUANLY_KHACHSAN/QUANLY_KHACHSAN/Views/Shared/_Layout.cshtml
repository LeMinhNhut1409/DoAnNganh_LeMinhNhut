<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Minh Nhựt Hotel</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.2/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Quanlykhachsan.styles.css" asp-append-version="true" />

</head>
<body>
    <div class="container-fluid">
        <header>
            @if (Context.Session.GetString("IsAuthenticated") != null)
            {
                var role = Context.Session.GetString("UserRole");
                if (role == "Manager" || role == "Staff")
                {
                    <div class="login-register-links">
                        <a asp-controller="Account" asp-action="Logout" class="text-dark">Logout</a>
                    </div>
                }
                else
                {
                    <div class="login-register-links">
                        <a asp-controller="Account" asp-action="Register" class="text-dark">Register</a> |
                        <a asp-controller="Account" asp-action="Login" class="text-dark">Login</a>
                    </div>
                }
            }
        </header>

        <div class="container">
            <div class="row flex-nowrap">
                <div class="col py-3">
                    @RenderBody()
                </div>
            </div>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
